#!/bin/sh

filename=$1

if [ -f $(dirname $filename)/Makefile ]; then 
    make -C $(dirname $filename) run;
    exit
fi

case "$filename" in
    *.cpp)      compile -O3 -std=c++17 -fopenmp $filename && ./"${filename%.*}";;
    *.c)        compile $filename && ./"${filename%.*}" ;;
    *.py)       python $filename ;;
    *.hs)       runghc $filename ;;
    *)          ./$filename ;;
esac
