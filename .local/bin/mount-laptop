#!/bin/sh

if cat /proc/mounts | grep "laptop: /home/ant/laptop" > /dev/null
then 
	umount ~/laptop || { echo "Erreur pendant le démontage" && exit; }
	echo "✔ Système de fichiers démonté" ;
else
	sshfs laptop: ~/laptop/ || { echo "Ne peut pas monter le systeme de fichiers" && exit; }
	echo "✔ Système de fichiers monté" ;
fi
