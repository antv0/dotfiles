#!/bin/bash

## Author : Aditya Shakya
## Github : adi1090x

MENU="$(rofi -sep "|" -dmenu -i -p 'Select' -location 3 -columns 4 -xoffset -10 -yoffset 35 -width 50 -hide-scrollbar -line-padding 4 -padding 20 -lines 10 <<< "♥ amber|♥ blue|♥ blue-grey|♥ brown|♥ cyan|♥ deep-orange|♥ deep-purple|♥ green|♥ grey|♥ indigo|♥ blue-light|♥ green-light|♥ lime|♥ orange|♥ pink|♥ purple|♥ red|♥ teal|♥ yellow|♥ amber-dark|♥ blue-dark|♥ blue-grey-dark|♥ brown-dark|♥ cyan-dark|♥ deep-orange-dark|♥ deep-purple-dark|♥ green-dark|♥ grey-dark|♥ indigo-dark|♥ blue-light-dark|♥ green-light-dark|♥ lime-dark|♥ orange-dark|♥ pink-dark|♥ purple-dark|♥ red-dark|♥ teal-dark|♥ yellow-dark|♥ dark-gruv")"
            case "$MENU" in
				## Light Colors
				*amber) colors-light -amber ;;
				*blue) colors-light -blue ;;
				*blue-grey) colors-light -blue-grey ;;
				*brown) colors-light -brown ;;
				*cyan) colors-light -cyan ;;
				*deep-orange) colors-light -deep-orange ;;
				*deep-purple) colors-light -deep-purple ;;
				*green) colors-light -green ;;
				*grey) colors-light -grey ;;
				*indigo) colors-light -indigo ;;
				*blue-light) colors-light -light-blue ;;
				*green-light) colors-light -light-green ;;
				*lime) colors-light -lime ;;
				*orange) colors-light -orange ;;
				*pink) colors-light -pink ;;
				*purple) colors-light -purple ;;
				*red) colors-light -red ;;
				*teal) colors-light -teal ;;
				*yellow) colors-light -yellow ;;
				## Dark Colors
				*amber-dark) colors-dark -amber ;;
				*blue-dark) colors-dark -blue ;;
				*blue-grey-dark) colors-dark -blue-grey ;;
				*brown-dark) colors-dark -brown ;;
				*cyan-dark) colors-dark -cyan ;;
				*deep-orange-dark) colors-dark -deep-orange ;;
				*deep-purple-dark) colors-dark -deep-purple ;;
				*green-dark) colors-dark -green ;;
				*grey-dark) colors-dark -grey ;;
				*indigo-dark) colors-dark -indigo ;;
				*blue-light-dark) colors-dark -light-blue ;;
				*green-light-dark) colors-dark -light-green ;;
				*lime-dark) colors-dark -lime ;;
				*orange-dark) colors-dark -orange ;;
				*pink-dark) colors-dark -pink ;;
				*purple-dark) colors-dark -purple ;;
				*red-dark) colors-dark -red ;;
				*teal-dark) colors-dark -teal ;;
				*yellow-dark) colors-dark -yellow;;
				*gruv) colors-dark -gruv;;
            esac
