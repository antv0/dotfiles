	# position bottom
	# mode dock
	# modifier None
# }

# Use Mouse+$mod to drag floating windows
floating_modifier $mod

# # ---Basic Bindings---# #
bindsym $mod+Return 		exec $term
bindsym $mod+Shift+Return	exec --no-startup-id samedir

bindsym $mod+a 				floating toggle
